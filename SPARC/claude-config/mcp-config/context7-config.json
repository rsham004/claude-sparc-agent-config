{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "description": "Context7 MCP Server for real-time documentation",
      "enforcement": {
        "strict_mode": true,
        "allowed_sources_file": "technology-lock.json",
        "cache_approved_docs": true,
        "block_unauthorized": true,
        "documentation_root": "/approved-docs/",
        "violation_action": "halt_and_issue"
      },
      "features": {
        "live_documentation": true,
        "version_specific": true,
        "technology_filtering": true,
        "offline_cache": true
      }
    },
    "tdd-guard": {
      "command": "python",
      "args": ["/claude-config/scripts/tdd-guard-mcp.py"],
      "description": "TDD process enforcement and monitoring",
      "enforcement": {
        "require_tests_first": true,
        "verify_red_green_cycle": true,
        "block_code_without_tests": true,
        "coverage_threshold": 80
      }
    },
    "github-enforcer": {
      "command": "python", 
      "args": ["/claude-config/scripts/github-mcp.py"],
      "description": "GitHub integration enforcement",
      "enforcement": {
        "require_issues": true,
        "mandate_commit_references": true,
        "auto_create_issues": true,
        "track_violations": true
      },
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "tech-validator": {
      "command": "python",
      "args": ["/claude-config/scripts/tech-validator-mcp.py"],
      "description": "Technology stack compliance validator",
      "enforcement": {
        "technology_lock_file": "technology-lock.json",
        "strict_version_checking": true,
        "block_unapproved_imports": true,
        "real_time_scanning": true
      }
    }
  },
  "tools": {
    "context7_fetch": {
      "description": "Fetch documentation for approved technologies only",
      "restricted_to": "approved_technologies_list",
      "cache_location": "/approved-docs/",
      "violation_reporting": true
    },
    "tdd_verify": {
      "description": "Verify TDD process compliance",
      "check_test_first": true,
      "verify_red_green": true,
      "block_non_compliant": true
    },
    "github_track": {
      "description": "Create and track GitHub issues automatically",
      "auto_issue_creation": true,
      "commit_validation": true,
      "violation_tracking": true
    },
    "tech_validate": {
      "description": "Validate technology usage against approved list",
      "real_time_checking": true,
      "import_scanning": true,
      "version_verification": true
    }
  },
  "workflow": {
    "agent_sequence": [
      "product-manager",
      "solution-architect", 
      "context7-enforcer",
      "data-architect",
      "api-developer", 
      "ux-designer",
      "planner",
      "coder-tdd"
    ],
    "enforcement_points": {
      "pre_agent": "verify_prerequisites",
      "post_agent": "validate_outputs",
      "continuous": "monitor_compliance"
    },
    "violation_response": {
      "halt_development": true,
      "create_github_issue": true,
      "notify_architect": true,
      "require_remediation": true
    }
  }
}